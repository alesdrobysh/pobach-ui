  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "regions": ["fra1"],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/guess/route.ts": {
      "includeFiles": "data/**",
      "maxDuration": 30
    },
    "app/api/hint/route.ts": {
      "includeFiles": "data/**",
      "maxDuration": 30
    },
    "app/api/target-word/route.ts": {
      "includeFiles": "data/**",
      "maxDuration": 30
    },
    "app/api/top-words/route.ts": {
      "includeFiles": "data/**",
      "maxDuration": 30
    }
  }
}
